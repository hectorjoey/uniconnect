<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#4cbbb9"
    android:orientation="vertical"
    android:padding="3dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/airImgUrl"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/airtime" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:layout_gravity="end"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/airImgUrl"
                android:orientation="vertical"
                android:padding="6dp"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:id="@+id/layout_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/vName"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:text="Name:"
                        android:textColor="#4cbbb9"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/airName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28dp"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/vAirFeeType"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:text="Fee type:"
                        android:textColor="#4cbbb9"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/airFeeType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28dp"
                        android:textSize="12sp" />
                </LinearLayout>

                <!--                <LinearLayout-->
                <!--                    android:id="@+id/layout_data_value"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_marginLeft="8dp"-->
                <!--                    android:layout_marginRight="8dp"-->
                <!--                    android:orientation="horizontal"-->
                <!--                    android:padding="2dp">-->

                <!--                    <TextView-->
                <!--                        android:id="@+id/vFreeType"-->
                <!--                        android:layout_width="80dp"-->
                <!--                        android:layout_height="match_parent"-->
                <!--                        android:text="Free type:"-->
                <!--                        android:textColor="#4cbbb9"-->
                <!--                        android:textSize="12sp" />-->

                <!--                    <TextView-->
                <!--                        android:id="@+id/teleFreeType"-->
                <!--                        android:layout_width="match_parent"-->
                <!--                        android:layout_height="wrap_content"-->
                <!--                        android:textSize="12sp" />-->
                <!--                </LinearLayout>-->

                <LinearLayout
                    android:id="@+id/layout_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/vMax"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:text="Maximum Amount:"
                        android:textColor="#4cbbb9"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/airMax"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/vMinAmount"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:text="Minimum Amount:"
                        android:textColor="#4cbbb9"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/minAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>